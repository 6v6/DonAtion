	<script>
		$('#loginBtn').click(function(){
		  $.ajax({
                url:'/login',
                type : 'POST',
                data : {
                    userEmail : $('#userEmail').val(),
                    userPassword : $('#userPassword').val(),
                },
                success:function(data){
					if(data == '2'){
						alert('비밀번호를 다시 입력해주세요!');
					}
					else if(data == '3'){
						alert('회원정보가 없습니다!');
					}
					else{
						sessionStorage.setItem('jwtToken', data);
						window.location.href = '/'
					}
                }
			})
		})
